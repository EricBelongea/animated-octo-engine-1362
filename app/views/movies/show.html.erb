<h1><%= @movie.title %></h1>
<p>Publish Year: <%= @movie.creation_year %></p>
<p>Genre: <%= @movie.genre %></p>
<h3>Actors:</h3>
<% @movie.actors_by_age.each do |actor| %>
  <li><%= actor %></li>
<% end %>

<h3>Average Actor Age</h3>
<%= @movie.average_actor_age %>

<h3><u>Add an Actor!</u></h3>
<%= form_with url: "/movies/#{@movie.id}", method: :get, local: :true do |f| %>
  <%= f.label "Enter Actor ID" %>
  <%= f.text_field :actor_id %>
  <%= f.submit "Add Actor" %>
<% end %>